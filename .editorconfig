
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
#end_of_line = lf|crlf|cr
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = true

[*.{xml,html,jsp,css,mustache,yml,rb}]
indent_size = 2
tab_width = 2

[*.{md,mkd,markdown}]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

[config]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
